<% content_for :title, "Add New Calf" %>

<!-- Modern Form Header -->
<div class="form-header mb-5">
  <div class="row align-items-center">
    <div class="col-lg-8">
      <div class="d-flex align-items-center">
        <div class="header-icon me-3">
          <i class="bi bi-heart-fill"></i>
        </div>
        <div>
          <h1 class="header-title mb-0">üêÆ Add New Calf</h1>
          <p class="header-subtitle mb-0">
            Register a new calf to your herd
          </p>
        </div>
      </div>
    </div>
    <div class="col-lg-4 text-end">
      <div class="form-actions-header">
        <%= link_to calves_path, class: "btn btn-outline-secondary" do %>
          <i class="bi bi-arrow-left me-2"></i>Back to Calves
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Form Container -->
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-xl-6">
      <div class="card shadow-sm">
        <div class="card-header bg-light">
          <h5 class="card-title mb-0">
            <i class="bi bi-plus-circle me-2"></i>Calf Registration Form
          </h5>
        </div>
        
        <div class="card-body">
          <%= form_with model: @calf, url: calves_path, local: true, class: "row g-3" do |form| %>
            
            <!-- Error Display -->
            <% if @calf.errors.any? %>
              <div class="col-12">
                <div class="alert alert-danger">
                  <h6 class="alert-heading">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Please fix the following errors:
                  </h6>
                  <ul class="mb-0">
                    <% @calf.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            <% end %>

            <!-- Basic Information -->
            <div class="col-md-6">
              <%= form.label :name, class: "form-label" do %>
                <i class="bi bi-heart me-2"></i>Calf Name *
              <% end %>
              <%= form.text_field :name, 
                  class: "form-control #{'is-invalid' if @calf.errors[:name].any?}", 
                  placeholder: "e.g., Buttercup",
                  required: true %>
              <% if @calf.errors[:name].any? %>
                <div class="invalid-feedback">
                  <%= @calf.errors[:name].first %>
                </div>
              <% end %>
            </div>

            <div class="col-md-6">
              <%= form.label :tag_number, class: "form-label" do %>
                <i class="bi bi-tags me-2"></i>Tag Number *
              <% end %>
              <%= form.text_field :tag_number, 
                  class: "form-control #{'is-invalid' if @calf.errors[:tag_number].any?}", 
                  placeholder: "e.g., C001",
                  required: true %>
              <% if @calf.errors[:tag_number].any? %>
                <div class="invalid-feedback">
                  <%= @calf.errors[:tag_number].first %>
                </div>
              <% end %>
            </div>

            <div class="col-md-4">
              <%= form.label :age, class: "form-label" do %>
                <i class="bi bi-calendar me-2"></i>Age (months) *
              <% end %>
              <%= form.number_field :age, 
                  class: "form-control #{'is-invalid' if @calf.errors[:age].any?}", 
                  placeholder: "0-24",
                  min: 0, max: 24,
                  required: true %>
              <% if @calf.errors[:age].any? %>
                <div class="invalid-feedback">
                  <%= @calf.errors[:age].first %>
                </div>
              <% end %>
            </div>

            <div class="col-md-4">
              <%= form.label :breed, class: "form-label" do %>
                <i class="bi bi-award me-2"></i>Breed
              <% end %>
              <%= form.select :breed,
                  options_for_select([
                    ['Holstein', 'Holstein'],
                    ['Jersey', 'Jersey'],
                    ['Guernsey', 'Guernsey'],
                    ['Ayrshire', 'Ayrshire'],
                    ['Brown Swiss', 'Brown Swiss'],
                    ['Friesian', 'Friesian'],
                    ['Crossbred', 'Crossbred'],
                    ['Other', 'Other']
                  ], @calf.breed),
                  { prompt: 'Select breed' },
                  { class: "form-select" } %>
            </div>

            <div class="col-md-4">
              <%= form.label :status, class: "form-label" do %>
                <i class="bi bi-heart-pulse me-2"></i>Status
              <% end %>
              <%= form.select :status,
                  options_for_select([
                    ['Active', 'active'],
                    ['Healthy', 'healthy'],
                    ['Sick', 'sick'],
                    ['Inactive', 'inactive']
                  ], @calf.status || 'active'),
                  {},
                  { class: "form-select" } %>
            </div>

            <div class="col-md-6">
              <%= form.label :farm_id, class: "form-label" do %>
                <i class="bi bi-house-door me-2"></i>Farm *
              <% end %>
              <%= form.select :farm_id,
                  options_from_collection_for_select(@farms, :id, :name, @calf.farm_id),
                  { prompt: 'Select farm' },
                  { class: "form-select", required: true } %>
            </div>

            <div class="col-md-6">
              <%= form.label :mother_id, class: "form-label" do %>
                <i class="bi bi-heart-fill me-2"></i>Mother (Optional)
              <% end %>
              <%= form.select :mother_id,
                  options_from_collection_for_select(Cow.adult_cows, :id, :display_name, @calf.mother_id),
                  { prompt: 'Select mother cow' },
                  { class: "form-select" } %>
              <div class="form-text">
                <small class="text-muted">Select the mother if known</small>
              </div>
            </div>

            <!-- Growth Data (Optional) -->
            <div class="col-12">
              <h6 class="text-muted mt-3">
                <i class="bi bi-speedometer me-2"></i>Growth Information (Optional)
              </h6>
              <hr>
            </div>

            <div class="col-md-4">
              <%= form.label :current_weight, class: "form-label" do %>
                <i class="bi bi-speedometer me-2"></i>Current Weight (kg)
              <% end %>
              <%= form.number_field :current_weight, 
                  class: "form-control", 
                  placeholder: "e.g., 45",
                  step: 0.1,
                  min: 0 %>
            </div>

            <div class="col-md-4">
              <%= form.label :prev_weight, class: "form-label" do %>
                <i class="bi bi-arrow-left-circle me-2"></i>Previous Weight (kg)
              <% end %>
              <%= form.number_field :prev_weight, 
                  class: "form-control", 
                  placeholder: "e.g., 40",
                  step: 0.1,
                  min: 0 %>
            </div>

            <div class="col-md-4">
              <%= form.label :birth_date, class: "form-label" do %>
                <i class="bi bi-calendar-event me-2"></i>Birth Date
              <% end %>
              <%= form.date_field :birth_date, 
                  class: "form-control",
                  max: Date.current %>
            </div>

            <!-- Form Actions -->
            <div class="col-12">
              <hr class="my-4">
              <div class="d-flex justify-content-end gap-2">
                <%= link_to calves_path, class: "btn btn-secondary" do %>
                  <i class="bi bi-x-lg me-2"></i>Cancel
                <% end %>
                <%= form.submit "Register Calf", class: "btn btn-success" do %>
                  <i class="bi bi-check-lg me-2"></i>Register Calf
                <% end %>
              </div>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

