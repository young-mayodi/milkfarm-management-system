<!-- AI-Powered Smart Fill Tools -->
<div class="ai-smart-fill-toolbar mb-3">
  <div class="card border-0 shadow-sm">
    <div class="card-body py-3">
      <div class="row g-2 align-items-center">
        <div class="col-md-3">
          <button type="button" class="btn btn-outline-primary w-100" id="ai_predict_btn">
            <i class="bi bi-robot me-2"></i>AI Predict
          </button>
        </div>
        <div class="col-md-3">
          <button type="button" class="btn btn-outline-success w-100" id="pattern_fill_btn">
            <i class="bi bi-arrow-repeat me-2"></i>Pattern Fill
          </button>
        </div>
        <div class="col-md-3">
          <button type="button" class="btn btn-outline-info w-100" id="weather_adjust_btn">
            <i class="bi bi-cloud-sun me-2"></i>Weather Adjust
          </button>
        </div>
        <div class="col-md-3">
          <button type="button" class="btn btn-outline-warning w-100" id="breed_optimize_btn">
            <i class="bi bi-award me-2"></i>Breed Optimize
          </button>
        </div>
      </div>
      
      <!-- AI Prediction Panel -->
      <div id="ai_prediction_panel" class="mt-3" style="display: none;">
        <div class="alert alert-info border-0">
          <div class="d-flex align-items-center">
            <i class="bi bi-lightbulb-fill text-warning me-2"></i>
            <div>
              <strong>AI Predictions Ready:</strong>
              <span id="prediction_summary">Based on historical data, weather, and cow health patterns</span>
            </div>
          </div>
          <div class="mt-2">
            <button type="button" class="btn btn-sm btn-primary me-2" id="apply_predictions">
              Apply All Predictions
            </button>
            <button type="button" class="btn btn-sm btn-outline-secondary" id="preview_predictions">
              Preview Changes
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
