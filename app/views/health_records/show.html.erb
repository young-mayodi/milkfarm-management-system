<div class="health-record-details-container">
  <div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h2 class="page-title">
          <i class="bi bi-heart-pulse"></i>
          Health Record Details
        </h2>
        <p class="text-muted">
          <i class="bi bi-calendar"></i>
          Recorded on <%= @health_record.recorded_at.strftime("%B %d, %Y at %I:%M %p") %>
        </p>
      </div>
      <div class="header-actions">
        <%= link_to health_records_path, class: "btn btn-outline-secondary" do %>
          <i class="bi bi-arrow-left"></i>
          Back to Health Records
        <% end %>
        <%= link_to edit_health_record_path(@health_record), class: "btn btn-primary ms-2" do %>
          <i class="bi bi-pencil"></i>
          Edit Record
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="bi bi-file-medical"></i>
            Health Information
          </h5>
        </div>
        <div class="card-body">
          <div class="row">
            <!-- Animal Information -->
            <div class="col-md-6 mb-3">
              <label class="form-label fw-bold">Animal</label>
              <div class="info-display">
                <strong><%= @cow.display_name %></strong>
                <small class="text-muted d-block">
                  Tag: <%= @cow.tag_number %> • <%= @cow.breed %>
                </small>
              </div>
            </div>

            <!-- Health Status -->
            <div class="col-md-6 mb-3">
              <label class="form-label fw-bold">Health Status</label>
              <div class="info-display">
                <span class="badge <%= health_status_badge_class(@health_record.health_status) %>">
                  <%= @health_record.health_status.titleize %>
                </span>
              </div>
            </div>
          </div>

          <div class="row">
            <!-- Temperature -->
            <% if @health_record.temperature.present? %>
              <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Temperature</label>
                <div class="info-display">
                  <%= @health_record.temperature %>°C
                  <small class="text-muted d-block">
                    Normal range: 38.0 - 39.5°C
                  </small>
                </div>
              </div>
            <% end %>

            <!-- Weight -->
            <% if @health_record.weight.present? %>
              <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Weight</label>
                <div class="info-display">
                  <%= @health_record.weight %> kg
                </div>
              </div>
            <% end %>
          </div>

          <div class="row">
            <!-- Recorded By -->
            <% if @health_record.recorded_by.present? %>
              <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Recorded By</label>
                <div class="info-display">
                  <%= @health_record.recorded_by %>
                </div>
              </div>
            <% end %>

            <!-- Veterinarian -->
            <% if @health_record.veterinarian.present? %>
              <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Veterinarian</label>
                <div class="info-display">
                  <%= @health_record.veterinarian %>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Notes -->
          <% if @health_record.notes.present? %>
            <div class="mb-3">
              <label class="form-label fw-bold">Notes</label>
              <div class="info-display">
                <%= simple_format(@health_record.notes) %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
      <div class="card bg-light">
        <div class="card-header">
          <h6 class="mb-0">
            <i class="bi bi-info-circle"></i>
            Animal Summary
          </h6>
        </div>
        <div class="card-body">
          <div class="animal-summary">
            <div class="text-center mb-3">
              <div class="animal-avatar">
                <%= @cow.tag_number %>
              </div>
              <h6 class="mt-2"><%= @cow.display_name %></h6>
              <small class="text-muted"><%= @cow.breed %> • <%= @cow.age %> years old</small>
            </div>
            
            <div class="stats-grid">
              <div class="stat-item">
                <span class="stat-value"><%= @cow.health_records.count %></span>
                <span class="stat-label">Health Records</span>
              </div>
              <div class="stat-item">
                <span class="stat-value"><%= @cow.vaccination_records.count %></span>
                <span class="stat-label">Vaccinations</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.health-record-details-container {
  padding: 20px;
}

.page-title {
  font-family: 'Poppins', sans-serif;
  font-weight: 600;
  color: #2c3e50;
}

.info-display {
  padding: 8px 12px;
  background-color: #f8f9fa;
  border-radius: 6px;
  border-left: 3px solid #007bff;
}

.animal-avatar {
  width: 60px;
  height: 60px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  margin: 0 auto;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15px;
  margin-top: 15px;
}

.stat-item {
  text-align: center;
  padding: 10px;
  background: white;
  border-radius: 8px;
  border: 1px solid #e9ecef;
}

.stat-value {
  display: block;
  font-size: 1.2rem;
  font-weight: bold;
  color: #007bff;
}

.stat-label {
  display: block;
  font-size: 0.8rem;
  color: #6c757d;
}

.card {
  border: none;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  border-radius: 12px;
}

.btn {
  border-radius: 8px;
  font-weight: 500;
}
</style>
