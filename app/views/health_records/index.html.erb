<% content_for :title, "Health Records" %>

<div class="container-fluid py-4">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1><i class="bi bi-heart-pulse me-2 text-danger"></i>Animal Health Management</h1>
      <p class="text-muted">Comprehensive health tracking and monitoring for your livestock</p>
    </div>
    <div>
      <%= link_to new_health_record_path, class: "btn btn-primary" do %>
        <i class="bi bi-plus-circle me-1"></i>New Health Record
      <% end %>
    </div>
  </div>

  <!-- Health Statistics Cards -->
  <div class="row mb-4">
    <div class="col-md-3">
      <div class="card border-0 shadow-sm bg-success text-white">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <i class="bi bi-check-circle-fill fs-1 me-3"></i>
            <div>
              <h3 class="mb-0"><%= @health_stats[:total_records] %></h3>
              <p class="mb-0">Total Records</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card border-0 shadow-sm bg-warning text-white">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill fs-1 me-3"></i>
            <div>
              <h3 class="mb-0"><%= @health_stats[:sick_animals] %></h3>
              <p class="mb-0">Sick Animals</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card border-0 shadow-sm bg-info text-white">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <i class="bi bi-heart-fill fs-1 me-3"></i>
            <div>
              <h3 class="mb-0"><%= @health_stats[:animals_needing_attention] %></h3>
              <p class="mb-0">Need Attention</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card border-0 shadow-sm bg-primary text-white">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <i class="bi bi-calendar-check-fill fs-1 me-3"></i>
            <div>
              <h3 class="mb-0"><%= @health_stats[:recent_checkups] %></h3>
              <p class="mb-0">Recent Checkups</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Health Records Table -->
  <div class="card border-0 shadow">
    <div class="card-header bg-white">
      <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Health Records</h5>
    </div>
    <div class="card-body">
      <% if @health_records.any? %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead class="table-light">
              <tr>
                <th>Animal</th>
                <th>Health Status</th>
                <th>Temperature</th>
                <th>Weight</th>
                <th>Recorded By</th>
                <th>Date</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @health_records.each do |record| %>
                <tr>
                  <td>
                    <div class="d-flex align-items-center">
                      <span class="badge bg-primary me-2"><%= record.cow.tag_number %></span>
                      <strong><%= record.cow.name %></strong>
                    </div>
                  </td>
                  <td>
                    <span class="badge bg-<%= record.requires_attention? ? 'danger' : 'success' %>">
                      <%= record.health_status.titleize %>
                    </span>
                  </td>
                  <td>
                    <% if record.temperature %>
                      <%= record.temperature %>°C
                      <% if record.is_abnormal_temperature? %>
                        <i class="bi bi-exclamation-triangle text-warning ms-1"></i>
                      <% end %>
                    <% else %>
                      <span class="text-muted">—</span>
                    <% end %>
                  </td>
                  <td>
                    <% if record.weight %>
                      <%= record.weight %> kg
                    <% else %>
                      <span class="text-muted">—</span>
                    <% end %>
                  </td>
                  <td><%= record.recorded_by %></td>
                  <td>
                    <%= record.recorded_at.strftime("%b %d, %Y") %>
                    <small class="text-muted d-block">
                      <%= time_ago_in_words(record.recorded_at) %> ago
                    </small>
                  </td>
                  <td>
                    <div class="btn-group" role="group">
                      <%= link_to record, class: "btn btn-sm btn-outline-primary" do %>
                        <i class="bi bi-eye"></i>
                      <% end %>
                      <%= link_to edit_health_record_path(record), class: "btn btn-sm btn-outline-secondary" do %>
                        <i class="bi bi-pencil"></i>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="bi bi-heart display-1 text-muted"></i>
          <h4 class="mt-3">No Health Records</h4>
          <p class="text-muted">Start tracking your animals' health by creating the first health record.</p>
          <%= link_to new_health_record_path, class: "btn btn-primary" do %>
            <i class="bi bi-plus-circle me-1"></i>Create First Record
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
