<% content_for :title do %>
  ROI Analytics Report
<% end %>

<style>
  * {
    box-sizing: border-box;
  }

  body {
    overflow-x: hidden;
  }

  .roi-report {
    width: 100%;
    overflow-x: hidden;
  }

  .report-header {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.1) 100%);
    border-radius: 12px;
    padding: 30px;
    border-left: 5px solid #667eea;
    animation: slideInDown 0.6s ease-out;
    width: 100%;
    margin-bottom: 30px;
  }

  @keyframes slideInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .report-title {
    font-size: 2rem;
    font-weight: 700;
    color: #1a202c;
    margin-bottom: 5px;
  }

  .report-subtitle {
    font-size: 0.95rem;
    color: #718096;
    margin: 0;
  }

  .stat-card {
    background: white;
    border-radius: 12px;
    padding: 25px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    border: 1px solid rgba(0, 0, 0, 0.05);
    animation: fadeIn 0.6s ease-out;
    display: flex;
    align-items: center;
    gap: 20px;
    height: 100%;
  }

  .stat-card i {
    font-size: 2.5rem;
    opacity: 0.8;
  }

  .stat-card h3 {
    font-size: 1.8rem;
    font-weight: 700;
    margin: 0;
  }

  .stat-card p {
    font-size: 0.95rem;
    margin: 5px 0 0 0;
  }

  .stat-card small {
    font-size: 0.8rem;
    opacity: 0.75;
  }

  /* Stat Card Borders */
  .card-annual-roi {
    border-left: 4px solid #667eea;
    color: #667eea;
  }

  .card-annual-profit {
    border-left: 4px solid #10b981;
    color: #10b981;
  }

  .card-total-investment {
    border-left: 4px solid #f59e0b;
    color: #f59e0b;
  }

  .card-payback-period {
    border-left: 4px solid #06b6d4;
    color: #06b6d4;
  }

  .content-card {
    background: white;
    border-radius: 12px;
    padding: 30px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    border: 1px solid rgba(0, 0, 0, 0.05);
    animation: fadeIn 0.6s ease-out;
    margin-bottom: 20px;
  }

  .content-title {
    font-size: 1.3rem;
    font-weight: 600;
    color: #1a202c;
    margin-bottom: 25px;
    padding-bottom: 15px;
    border-bottom: 2px solid #667eea;
  }

  .sidebar-card {
    background: white;
    border-radius: 12px;
    padding: 25px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    border: 1px solid rgba(0, 0, 0, 0.05);
    margin-bottom: 20px;
    animation: fadeIn 0.6s ease-out;
  }

  .sidebar-title {
    font-size: 1rem;
    font-weight: 600;
    color: #1a202c;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .sidebar-title i {
    color: #667eea;
  }

  .investment-item {
    margin-bottom: 15px;
    padding-bottom: 15px;
    border-bottom: 1px solid #e5e7eb;
  }

  .investment-item:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }

  .investment-label {
    font-size: 0.9rem;
    color: #718096;
    margin-bottom: 8px;
  }

  .investment-amount {
    font-weight: 600;
    font-size: 1.1rem;
    margin-bottom: 8px;
  }

  .progress {
    height: 8px;
    background-color: #e5e7eb;
    border-radius: 4px;
  }

  .animal-roi-table {
    width: 100%;
    font-size: 0.9rem;
    border-collapse: collapse;
  }

  .animal-roi-table thead {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.05) 100%);
  }

  .animal-roi-table thead th {
    padding: 15px;
    font-weight: 600;
    color: #1a202c;
    text-align: left;
    border: none;
  }

  .animal-roi-table tbody tr {
    border-bottom: 1px solid #e5e7eb;
    transition: background-color 0.2s;
  }

  .animal-roi-table tbody tr:hover {
    background-color: #f9fafb;
  }

  .animal-roi-table tbody td {
    padding: 15px;
  }

  .performance-bar {
    width: 60px;
    height: 8px;
    background-color: #e5e7eb;
    border-radius: 4px;
    overflow: hidden;
  }

  .performance-fill {
    height: 100%;
    transition: width 0.5s ease;
  }

  .strategy-card {
    background: #f9fafb;
    border-radius: 8px;
    padding: 20px;
    height: 100%;
    border-left: 4px solid #667eea;
  }

  .strategy-icon {
    text-align: center;
    margin-bottom: 15px;
  }

  .strategy-icon i {
    font-size: 2.5rem;
  }

  .strategy-content h6 {
    color: #1a202c;
    margin-bottom: 15px;
    font-weight: 600;
  }

  .strategy-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .strategy-list li {
    padding: 6px 0;
    font-size: 0.875rem;
    color: #718096;
    position: relative;
    padding-left: 20px;
  }

  .strategy-list li:before {
    content: "âœ“";
    position: absolute;
    left: 0;
    color: #10b981;
    font-weight: bold;
  }

  .roi-performance-alert {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(5, 150, 105, 0.05) 100%);
    border-left: 4px solid #10b981;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 15px;
  }

  .roi-performance-alert.excellent {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(5, 150, 105, 0.05) 100%);
    border-left-color: #10b981;
    color: #047857;
  }

  .roi-performance-alert.good {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(37, 99, 235, 0.05) 100%);
    border-left-color: #3b82f6;
    color: #1e40af;
  }

  .roi-performance-alert.moderate {
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.1) 0%, rgba(217, 119, 6, 0.05) 100%);
    border-left-color: #f59e0b;
    color: #92400e;
  }

  .roi-performance-alert.poor {
    background: linear-gradient(135deg, rgba(239, 68, 68, 0.1) 0%, rgba(220, 38, 38, 0.05) 100%);
    border-left-color: #ef4444;
    color: #7f1d1d;
  }

  .gauge-meter {
    position: relative;
    width: 120px;
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
  }

  .gauge-inner {
    position: absolute;
    text-align: center;
  }

  .gauge-value {
    display: block;
    font-size: 1.5rem;
    font-weight: bold;
    color: #1a202c;
  }

  .gauge-label {
    display: block;
    font-size: 0.75rem;
    color: #718096;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  @media (max-width: 768px) {
    .report-header {
      padding: 20px;
    }

    .report-title {
      font-size: 1.5rem;
    }

    .stat-card {
      padding: 15px;
      flex-direction: column;
      text-align: center;
    }

    .stat-card i {
      font-size: 2rem;
    }

    .content-card {
      padding: 20px;
    }

    .animal-roi-table {
      font-size: 0.8rem;
    }

    .animal-roi-table th,
    .animal-roi-table td {
      padding: 10px 5px;
    }

    .sidebar-card {
      padding: 20px;
    }

    .strategy-card {
      padding: 15px;
    }

    .strategy-icon i {
      font-size: 2rem;
    }
  }

  @media (max-width: 576px) {
    .report-header {
      padding: 15px;
      margin-bottom: 20px;
    }

    .report-title {
      font-size: 1.3rem;
    }

    .stat-card {
      padding: 15px;
    }

    .stat-card h3 {
      font-size: 1.4rem;
    }

    .content-card {
      padding: 15px;
    }

    .animal-roi-table {
      font-size: 0.75rem;
    }

    .animal-roi-table th,
    .animal-roi-table td {
      padding: 8px 4px;
    }

    .animal-roi-table th:nth-child(n+4),
    .animal-roi-table td:nth-child(n+4) {
      display: none;
    }

    .sidebar-card {
      padding: 15px;
    }

    .strategy-list li {
      font-size: 0.8rem;
    }
  }
</style>

<div class="roi-report">
  <!-- Page Header -->
  <div class="report-header">
    <div class="row align-items-center">
      <div class="col-lg-8">
        <div class="d-flex align-items-center gap-3">
          <div style="font-size: 2.5rem;">ðŸ“ˆ</div>
          <div>
            <h1 class="report-title mb-0">ROI Analytics Report</h1>
            <p class="report-subtitle">Return on Investment analysis per animal and farm operations</p>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="d-flex justify-content-lg-end gap-2">
          <%= link_to financial_reports_path, class: "btn btn-outline-secondary" do %>
            <i class="bi bi-arrow-left"></i> Back to Dashboard
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- ROI Summary Cards -->
  <div class="row mb-4 g-3">
    <div class="col-md-6 col-lg-3">
      <div class="stat-card card-annual-roi">
        <div>
          <i class="bi bi-graph-up-arrow"></i>
          <h3><%= @roi_analytics[:roi_percentage] %>%</h3>
          <p>Annual ROI</p>
          <small>Return on investment</small>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-lg-3">
      <div class="stat-card card-annual-profit">
        <div>
          <i class="bi bi-currency-exchange"></i>
          <h3>KES <%= number_with_delimiter(@roi_analytics[:annual_profit]) %></h3>
          <p>Annual Profit</p>
          <small>Total yearly profit</small>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-lg-3">
      <div class="stat-card card-total-investment">
        <div>
          <i class="bi bi-cash-stack"></i>
          <h3>KES <%= number_with_delimiter(@roi_analytics[:total_investment]) %></h3>
          <p>Total Investment</p>
          <small>Equipment & breeding</small>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-lg-3">
      <div class="stat-card card-payback-period">
        <div>
          <i class="bi bi-clock"></i>
          <h3><%= @roi_analytics[:payback_period] %></h3>
          <p>Payback Period</p>
          <small>Months to break even</small>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-4">
    <!-- Investment Summary -->
    <div class="col-lg-4">
      <!-- Investment Breakdown -->
      <div class="sidebar-card">
        <div class="sidebar-title">
          <i class="bi bi-pie-chart-fill"></i>
          Investment Breakdown
        </div>
        <div class="investment-item">
          <div class="d-flex justify-content-between mb-2">
            <span class="investment-label"><i class="bi bi-gear text-warning"></i> Equipment</span>
            <strong>KES <%= number_with_delimiter(@investment_summary[:equipment_investment]) %></strong>
          </div>
          <div class="progress">
            <div class="progress-bar bg-warning" style="width: <%= (@investment_summary[:equipment_investment] / @investment_summary[:total_investment] * 100).round(1) rescue 0 %>%"></div>
          </div>
        </div>
        <div class="investment-item">
          <div class="d-flex justify-content-between mb-2">
            <span class="investment-label"><i class="bi bi-heart text-danger"></i> Breeding</span>
            <strong>KES <%= number_with_delimiter(@investment_summary[:breeding_investment]) %></strong>
          </div>
          <div class="progress">
            <div class="progress-bar bg-danger" style="width: <%= (@investment_summary[:breeding_investment] / @investment_summary[:total_investment] * 100).round(1) rescue 0 %>%"></div>
          </div>
        </div>
      </div>

      <!-- ROI Performance -->
      <div class="sidebar-card">
        <div class="sidebar-title">
          <i class="bi bi-speedometer2"></i>
          ROI Performance
        </div>
        <div class="gauge-meter">
          <svg width="120" height="120" class="gauge-svg" id="roiGauge">
            <circle cx="60" cy="60" r="45" fill="none" stroke="#e5e7eb" stroke-width="8"></circle>
            <circle cx="60" cy="60" r="45" fill="none" stroke="#667eea" stroke-width="8" stroke-linecap="round" id="roiProgress"></circle>
          </svg>
          <div class="gauge-inner">
            <span class="gauge-value"><%= @roi_analytics[:roi_percentage] %>%</span>
            <span class="gauge-label">ROI</span>
          </div>
        </div>

        <div style="margin-top: 20px;">
          <% if @roi_analytics[:roi_percentage] >= 25 %>
            <div class="roi-performance-alert excellent">
              <strong><i class="bi bi-check-circle me-2"></i>Excellent ROI</strong><br>
              <small>Outstanding investment performance</small>
            </div>
          <% elsif @roi_analytics[:roi_percentage] >= 15 %>
            <div class="roi-performance-alert good">
              <strong><i class="bi bi-info-circle me-2"></i>Good ROI</strong><br>
              <small>Healthy investment returns</small>
            </div>
          <% elsif @roi_analytics[:roi_percentage] >= 5 %>
            <div class="roi-performance-alert moderate">
              <strong><i class="bi bi-exclamation-triangle me-2"></i>Moderate ROI</strong><br>
              <small>Room for improvement</small>
            </div>
          <% else %>
            <div class="roi-performance-alert poor">
              <strong><i class="bi bi-x-circle me-2"></i>Poor ROI</strong><br>
              <small>Consider optimization strategies</small>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Individual Animal ROI Analysis -->
    <div class="col-lg-8">
      <div class="content-card">
        <div class="content-title">
          <i class="bi bi-table me-2"></i>
          Individual Animal ROI Analysis (Last 6 Months)
        </div>
        <% if @animal_roi.present? %>
          <div class="table-responsive">
            <table class="animal-roi-table">
              <thead>
                <tr>
                  <th>Animal</th>
                  <th>Tag</th>
                  <th>Revenue</th>
                  <th>Est. Expenses</th>
                  <th>Profit</th>
                  <th>ROI %</th>
                  <th>Performance</th>
                </tr>
              </thead>
              <tbody>
                <% @animal_roi.sort_by { |animal| -animal[:roi_percentage] }.each_with_index do |animal, index| %>
                  <tr class="<%= 'table-success' if index < 3 && animal[:roi_percentage] > 0 %>">
                    <td>
                      <strong><%= animal[:name] %></strong>
                      <% if index < 3 && animal[:roi_percentage] > 0 %>
                        <span class="badge bg-warning ms-1">Top Performer</span>
                      <% end %>
                    </td>
                    <td><span class="badge bg-secondary"><%= animal[:tag_number] %></span></td>
                    <td class="text-success">
                      <strong>KES <%= number_with_delimiter(animal[:revenue]) %></strong>
                    </td>
                    <td class="text-warning">
                      KES <%= number_with_delimiter(animal[:estimated_expenses]) %>
                    </td>
                    <td class="text-<%= animal[:profit] >= 0 ? 'success' : 'danger' %>">
                      <strong>KES <%= number_with_delimiter(animal[:profit]) %></strong>
                    </td>
                    <td>
                      <span class="badge bg-<%= animal[:roi_percentage] >= 20 ? 'success' : animal[:roi_percentage] >= 10 ? 'primary' : animal[:roi_percentage] >= 0 ? 'warning' : 'danger' %>">
                        <%= animal[:roi_percentage] %>%
                      </span>
                    </td>
                    <td>
                      <div class="performance-bar">
                        <div class="performance-fill bg-<%= animal[:roi_percentage] >= 15 ? 'success' : animal[:roi_percentage] >= 5 ? 'warning' : 'danger' %>" style="width: <%= [animal[:roi_percentage].abs, 100].min %>%"></div>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-4">
            <i class="bi bi-info-circle text-muted" style="font-size: 3rem;"></i>
            <p class="text-muted mt-2">No animal ROI data available. Ensure production and sales records are up to date.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- ROI Improvement Strategies -->
  <div class="content-card">
    <div class="content-title">
      <i class="bi bi-lightbulb me-2"></i>
      ROI Improvement Strategies
    </div>
    <div class="row g-3">
      <div class="col-md-4">
        <div class="strategy-card">
          <div class="strategy-icon">
            <i class="bi bi-graph-up text-success"></i>
          </div>
          <div class="strategy-content">
            <h6>Increase Production Efficiency</h6>
            <ul class="strategy-list">
              <% if @animal_roi.present? && @animal_roi.select { |a| a[:roi_percentage] < 10 }.count > 0 %>
                <li>Focus on low-performing animals</li>
                <li>Improve feed quality and nutrition</li>
              <% end %>
              <li>Optimize milking schedules</li>
              <li>Monitor animal health regularly</li>
            </ul>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="strategy-card">
          <div class="strategy-icon">
            <i class="bi bi-cash-coin text-warning"></i>
          </div>
          <div class="strategy-content">
            <h6>Cost Optimization</h6>
            <ul class="strategy-list">
              <li>Bulk purchase feed supplies</li>
              <li>Implement preventive healthcare</li>
              <li>Optimize labor allocation</li>
              <li>Regular equipment maintenance</li>
            </ul>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="strategy-card">
          <div class="strategy-icon">
            <i class="bi bi-arrow-up-circle text-primary"></i>
          </div>
          <div class="strategy-content">
            <h6>Revenue Enhancement</h6>
            <ul class="strategy-list">
              <li>Explore premium milk markets</li>
              <li>Consider value-added products</li>
              <li>Improve milk quality standards</li>
              <li>Expand customer base</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
// ROI Gauge Animation
document.addEventListener('DOMContentLoaded', function() {
  const roiProgress = document.getElementById('roiProgress');
  if (roiProgress) {
    const percentage = <%= @roi_analytics[:roi_percentage] %>;
    const circumference = 2 * Math.PI * 45; // radius = 45
    const strokeDasharray = circumference;
    const strokeDashoffset = circumference - (percentage / 100) * circumference;
    
    roiProgress.setAttribute('stroke-dasharray', strokeDasharray);
    roiProgress.setAttribute('stroke-dashoffset', strokeDashoffset);
    roiProgress.style.transition = 'stroke-dashoffset 1.5s ease-in-out';
    roiProgress.style.transform = 'rotate(-90deg)';
    roiProgress.style.transformOrigin = 'center';
  }
});
</script>
