<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
  <div class="text-center">
    <div class="mb-4">
      <i class="bi bi-x-circle-fill text-warning" style="font-size: 6rem;"></i>
    </div>
    
    <h1 class="display-1 fw-bold text-warning"><%= @error_code %></h1>
    <h2 class="mb-3"><%= @error_message %></h2>
    <p class="text-muted mb-4"><%= @error_description %></p>
    
    <div class="d-flex gap-2 justify-content-center">
      <%= link_to "Go Back", :back, class: "btn btn-warning" %>
      <%= link_to "Back to Dashboard", dashboard_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>
