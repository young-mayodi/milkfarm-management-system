<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
  <div class="text-center">
    <div class="mb-4">
      <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 6rem;"></i>
    </div>
    
    <h1 class="display-1 fw-bold text-primary"><%= @error_code %></h1>
    <h2 class="mb-3"><%= @error_message %></h2>
    <p class="text-muted mb-4"><%= @error_description %></p>
    
    <div class="d-flex gap-2 justify-content-center">
      <%= link_to "Back to Dashboard", dashboard_path, class: "btn btn-primary" %>
      <%= link_to "Go to Home", root_path, class: "btn btn-outline-secondary" %>
    </div>
    
    <div class="mt-5">
      <p class="text-muted small">
        If you believe this is an error, please contact support.
      </p>
    </div>
  </div>
</div>
