<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1>
      <i class="bi bi-pencil-square me-2"></i>
      Edit Team Member
    </h1>
    <p class="lead text-muted">Update user details for <%= @user.full_name %></p>
  </div>
  <div>
    <%= link_to "Back to Team", users_path, class: "btn btn-outline-secondary" %>
  </div>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">User Information</h5>
      </div>
      <div class="card-body">
        <%= render "form", user: @user, submit_label: "Save Changes" %>
      </div>
    </div>
  </div>

  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <h6 class="mb-0">
          <i class="bi bi-shield-check me-2"></i>
          Permission Levels
        </h6>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <h6 class="text-danger">
            <i class="bi bi-star-fill me-1"></i>
            Farm Owner
          </h6>
          <small class="text-muted">Complete system access, user management, financial data</small>
        </div>
        
        <div class="mb-3">
          <h6 class="text-warning">
            <i class="bi bi-shield-fill me-1"></i>
            Farm Manager
          </h6>
          <small class="text-muted">Reports, user management, production oversight</small>
        </div>
        
        <div class="mb-3">
          <h6 class="text-success">
            <i class="bi bi-heart-pulse me-1"></i>
            Veterinarian
          </h6>
          <small class="text-muted">View reports, cow health data, production trends</small>
        </div>
        
        <div class="mb-0">
          <h6 class="text-info">
            <i class="bi bi-person-workspace me-1"></i>
            Farm Worker
          </h6>
          <small class="text-muted">Add production records, view basic farm data</small>
        </div>
      </div>
    </div>

    <div class="card mt-3">
      <div class="card-header">
        <h6 class="mb-0">
          <i class="bi bi-info-circle me-2"></i>
          Security Notes
        </h6>
      </div>
      <div class="card-body">
        <small class="text-muted">
          • Leave password fields blank to keep existing password<br>
          • Each user will only see data for <%= current_farm.name %><br>
          • Only farm owners and managers can manage users
        </small>
      </div>
    </div>
  </div>
</div>
