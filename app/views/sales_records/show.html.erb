<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1>Sales Record Details</h1>
    <p class="lead text-muted">
      <%= @sales_record.sale_date.strftime("%B %d, %Y") %> - <%= @sales_record.farm.name %>
    </p>
  </div>
  <div>
    <%= link_to "Edit", edit_sales_record_path(@sales_record), class: "btn btn-primary me-2" %>
    <% if @farm %>
      <%= link_to "Back to Sales", farm_sales_records_path(@farm), class: "btn btn-outline-secondary" %>
    <% else %>
      <%= link_to "Back to Sales", sales_records_path, class: "btn btn-outline-secondary" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Sales Information</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <dl class="row">
              <dt class="col-sm-4">Farm:</dt>
              <dd class="col-sm-8">
                <%= link_to @sales_record.farm.name, @sales_record.farm, class: "text-decoration-none" %>
              </dd>
              
              <dt class="col-sm-4">Sale Date:</dt>
              <dd class="col-sm-8"><%= @sales_record.sale_date.strftime("%B %d, %Y") %></dd>
              
              <dt class="col-sm-4">Buyer:</dt>
              <dd class="col-sm-8"><%= @sales_record.buyer %></dd>
            </dl>
          </div>
          
          <div class="col-md-6">
            <dl class="row">
              <dt class="col-sm-6">Milk Sold:</dt>
              <dd class="col-sm-6">
                <span class="badge bg-success fs-6">
                  <%= number_with_precision(@sales_record.milk_sold, precision: 1) %> L
                </span>
              </dd>
              
              <dt class="col-sm-6">Price per Liter:</dt>
              <dd class="col-sm-6">
                <span class="badge bg-primary fs-6">
                  KES <%= number_with_precision(@sales_record.total_sales / @sales_record.milk_sold, precision: 0) %>
                </span>
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Payment Breakdown</h5>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-6">Cash Sales:</dt>
          <dd class="col-6">KES <%= number_with_precision(@sales_record.cash_sales, precision: 0) %></dd>
          
          <dt class="col-6">M-Pesa Sales:</dt>
          <dd class="col-6">KES <%= number_with_precision(@sales_record.mpesa_sales, precision: 0) %></dd>
          
          <hr>
          
          <dt class="col-6"><strong>Total Sales:</strong></dt>
          <dd class="col-6">
            <strong class="text-success">
              KES <%= number_with_precision(@sales_record.total_sales, precision: 0) %>
            </strong>
          </dd>
        </dl>
      </div>
    </div>
  </div>
</div>
