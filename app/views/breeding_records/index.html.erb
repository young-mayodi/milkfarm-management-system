<div class="breeding-records-index">
  <div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h2 class="page-title">
          <i class="bi bi-heart"></i>
          Breeding Records
        </h2>
        <p class="text-muted">Track breeding activities and pregnancy status</p>
      </div>
      <div class="header-actions">
        <%= link_to new_breeding_record_path, class: "btn btn-success" do %>
          <i class="bi bi-plus-circle"></i>
          New Breeding Record
        <% end %>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <% if @breeding_stats %>
    <div class="row mb-4">
      <div class="col-md-3">
        <div class="stat-card bg-primary text-white">
          <div class="stat-icon">
            <i class="bi bi-heart-fill"></i>
          </div>
          <div class="stat-content">
            <h3><%= @breeding_stats[:total_records] %></h3>
            <p>Total Breeding Records</p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card bg-warning text-white">
          <div class="stat-icon">
            <i class="bi bi-calendar-event"></i>
          </div>
          <div class="stat-content">
            <h3><%= @breeding_stats[:due_soon] %></h3>
            <p>Calving Due Soon</p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card bg-success text-white">
          <div class="stat-icon">
            <i class="bi bi-check-circle"></i>
          </div>
          <div class="stat-content">
            <h3><%= @breeding_stats[:pregnant_animals] %></h3>
            <p>Confirmed Pregnant</p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card bg-info text-white">
          <div class="stat-icon">
            <i class="bi bi-graph-up"></i>
          </div>
          <div class="stat-content">
            <h3><%= @breeding_stats[:success_rate] %>%</h3>
            <p>Success Rate</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Breeding Records Table -->
  <div class="card">
    <div class="card-body">
      <% if @breeding_records.any? %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Animal</th>
                <th>Breeding Date</th>
                <th>Method</th>
                <th>Expected Due Date</th>
                <th>Status</th>
                <th>Progress</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @breeding_records.each do |record| %>
                <tr>
                  <td>
                    <strong><%= record.cow.tag_number %></strong>
                    <br>
                    <small class="text-muted"><%= record.cow.name %></small>
                  </td>
                  <td>
                    <%= record.breeding_date.strftime("%b %d, %Y") %>
                  </td>
                  <td>
                    <% if record.breeding_method %>
                      <span class="badge bg-info"><%= record.breeding_method.titleize %></span>
                    <% else %>
                      <span class="text-muted">-</span>
                    <% end %>
                  </td>
                  <td>
                    <% if record.expected_due_date %>
                      <%= record.expected_due_date.strftime("%b %d, %Y") %>
                      <% days_until = (record.expected_due_date - Date.current).to_i %>
                      <% if days_until <= 0 && record.breeding_status != 'calved' %>
                        <span class="badge bg-danger ms-1">Overdue</span>
                      <% elsif days_until <= 7 && days_until > 0 %>
                        <span class="badge bg-warning ms-1">Due Soon</span>
                      <% elsif days_until > 0 %>
                        <small class="text-muted d-block"><%= days_until %> days</small>
                      <% end %>
                    <% else %>
                      <span class="text-muted">-</span>
                    <% end %>
                  </td>
                  <td>
                    <% case record.breeding_status %>
                    <% when 'bred' %>
                      <span class="badge bg-secondary">Bred</span>
                    <% when 'pregnant' %>
                      <span class="badge bg-success">Pregnant</span>
                    <% when 'not_pregnant' %>
                      <span class="badge bg-danger">Not Pregnant</span>
                    <% when 'calved' %>
                      <span class="badge bg-primary">Calved</span>
                    <% when 'aborted' %>
                      <span class="badge bg-warning">Aborted</span>
                    <% else %>
                      <span class="badge bg-light text-dark">Unknown</span>
                    <% end %>
                  </td>
                  <td>
                    <% if record.expected_due_date && record.breeding_status == 'pregnant' %>
                      <% 
                        gestation_days = (Date.current - record.breeding_date).to_i
                        progress_percent = [(gestation_days.to_f / 283 * 100).round, 100].min
                      %>
                      <div class="progress" style="height: 8px;">
                        <div class="progress-bar bg-success" 
                             style="width: <%= progress_percent %>%" 
                             title="<%= gestation_days %> days / 283 days"></div>
                      </div>
                      <small class="text-muted"><%= progress_percent %>% complete</small>
                    <% else %>
                      <span class="text-muted">-</span>
                    <% end %>
                  </td>
                  <td>
                    <div class="btn-group" role="group">
                      <%= link_to breeding_record_path(record), class: "btn btn-sm btn-outline-primary" do %>
                        <i class="bi bi-eye"></i>
                      <% end %>
                      <%= link_to edit_breeding_record_path(record), class: "btn btn-sm btn-outline-secondary" do %>
                        <i class="bi bi-pencil"></i>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <% if respond_to?(:paginate) %>
          <div class="d-flex justify-content-center">
            <%= paginate @breeding_records %>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-5">
          <i class="bi bi-heart" style="font-size: 4rem; color: #ccc;"></i>
          <h4 class="mt-3">No Breeding Records Yet</h4>
          <p class="text-muted">Start by recording your first breeding activity.</p>
          <%= link_to new_breeding_record_path, class: "btn btn-success" do %>
            <i class="bi bi-plus-circle"></i>
            Add First Breeding Record
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
.breeding-records-index {
  padding: 20px;
}

.page-title {
  font-family: 'Poppins', sans-serif;
  font-weight: 600;
  color: #2c3e50;
}

.stat-card {
  display: flex;
  align-items: center;
  padding: 20px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  margin-bottom: 20px;
}

.stat-icon {
  font-size: 2.5rem;
  margin-right: 15px;
  opacity: 0.8;
}

.stat-content h3 {
  margin: 0;
  font-size: 2rem;
  font-weight: bold;
}

.stat-content p {
  margin: 0;
  opacity: 0.9;
}

.card {
  border: none;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  border-radius: 12px;
}

.btn {
  border-radius: 8px;
  font-weight: 500;
}

.table th {
  border-top: none;
  font-weight: 600;
  color: #495057;
}

.progress {
  margin-bottom: 2px;
}
</style>
